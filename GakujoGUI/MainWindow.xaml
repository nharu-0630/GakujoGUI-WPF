<Window
    x:Class="GakujoGUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GakujoGUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="GakujoGUI"
    Width="800"
    Height="450"
    ui:WindowHelper.UseModernWindowStyle="True"
    Loaded="Window_Loaded"
    mc:Ignorable="d">
    <TabControl>
        <TabItem Header="ログイン" IsSelected="True">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <ui:SimpleStackPanel
                    Grid.Column="0"
                    Margin="6"
                    Orientation="Vertical"
                    Spacing="6">
                    <TextBox
                        Name="UserId"
                        Width="180"
                        HorizontalAlignment="Left"
                        ui:ControlHelper.PlaceholderText="静大ID" />
                    <PasswordBox
                        Name="PassWord"
                        Width="180"
                        HorizontalAlignment="Left"
                        ui:ControlHelper.PlaceholderText="パスワード" />
                    <Button
                        Name="Login"
                        Width="180"
                        Click="Login_Click"
                        Content="ログイン" />
                </ui:SimpleStackPanel>
                <GridSplitter
                    Grid.Column="1"
                    Width="5"
                    HorizontalAlignment="Stretch" />
                <DataGrid
                    Name="ClassTable"
                    Grid.Column="2"
                    Margin="6"
                    AreRowDetailsFrozen="True"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserReorderColumns="False"
                    CanUserResizeColumns="False"
                    CanUserResizeRows="False"
                    CanUserSortColumns="False"
                    RowHeight="32"
                    ScrollViewer.CanContentScroll="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    SelectionChanged="ClassTable_SelectionChanged"
                    SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="80"
                            Header="月曜日"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Width="80"
                            Header="火曜日"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Width="80"
                            Header="水曜日"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Width="80"
                            Header="木曜日"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Width="80"
                            Header="金曜日"
                            IsReadOnly="True" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>
        <TabItem Header="授業連絡">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <Button Margin="6" Content="更新" />
                </StackPanel>
                <GridSplitter
                    Grid.Row="1"
                    Width="5"
                    VerticalAlignment="Stretch" />
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MinWidth="100" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" MinWidth="100" />
                    </Grid.ColumnDefinitions>
                    <DataGrid
                        Name="ClassContacts"
                        Grid.Column="0"
                        Margin="6"
                        AreRowDetailsFrozen="True"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        CanUserReorderColumns="False"
                        CanUserResizeRows="False"
                        CanUserSortColumns="False"
                        RowHeight="32"
                        ScrollViewer.CanContentScroll="True"
                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        SelectionChanged="ClassContacts_SelectionChanged"
                        SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="100"
                                MinWidth="100"
                                Binding="{Binding Subjects}"
                                Header="授業科目"
                                IsReadOnly="True" />
                            <DataGridTextColumn
                                Width="280"
                                MinWidth="280"
                                Binding="{Binding Title}"
                                Header="タイトル"
                                IsReadOnly="True" />
                            <DataGridTextColumn
                                Width="240"
                                MinWidth="120"
                                MaxWidth="240"
                                Binding="{Binding Content}"
                                Header="内容"
                                IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn
                                Width="120"
                                MinWidth="120"
                                Binding="{Binding ContactDateTime}"
                                Header="連絡日時"
                                IsReadOnly="True" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <GridSplitter
                        Grid.Column="1"
                        Width="5"
                        HorizontalAlignment="Stretch" />
                    <StackPanel Grid.Column="2">
                        <StackPanel Margin="6" Orientation="Vertical">
                            <TextBox
                                Name="ClassContactContent"
                                MinHeight="160"
                                IsReadOnly="True"
                                Text="内容"
                                TextWrapping="Wrap" />
                            <StackPanel Orientation="Horizontal">
                                <ComboBox
                                    Name="ClassContactFiles"
                                    MaxWidth="360"
                                    Margin="6" />
                                <Button
                                    Name="OpenClassContactFile"
                                    Margin="6"
                                    Click="OpenClassContactFile_Click"
                                    Content="ファイルを開く" />
                                <Button
                                    Name="OpenClassContactFolder"
                                    Margin="6"
                                    Click="OpenClassContactFolder_Click"
                                    Content="フォルダを開く" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
        </TabItem>
        <TabItem Header="レポート">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <Button Margin="6" Content="更新" />
                </StackPanel>
                <GridSplitter
                    Grid.Row="1"
                    Width="5"
                    VerticalAlignment="Stretch" />
                <DataGrid
                    Name="Reports"
                    Grid.Row="2"
                    Margin="6"
                    AreRowDetailsFrozen="True"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserReorderColumns="False"
                    CanUserResizeRows="False"
                    CanUserSortColumns="False"
                    RowHeight="32"
                    ScrollViewer.CanContentScroll="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    SelectionChanged="Reports_SelectionChanged"
                    SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="100"
                            MinWidth="100"
                            Binding="{Binding Subjects}"
                            Header="授業科目"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Width="280"
                            MinWidth="280"
                            Binding="{Binding Title}"
                            Header="タイトル"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Width="100"
                            MinWidth="100"
                            Binding="{Binding Status}"
                            Header="状態"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Width="120"
                            MinWidth="120"
                            Binding="{Binding StartDateTime}"
                            Header="提出期間"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Width="120"
                            MinWidth="120"
                            Binding="{Binding EndDateTime}"
                            Header="提出期間"
                            IsReadOnly="True" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>
        <TabItem Header="小テスト">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <Button Margin="6" Content="更新" />
                </StackPanel>
                <GridSplitter
                    Grid.Row="1"
                    Width="5"
                    VerticalAlignment="Stretch" />
                <DataGrid
                    Name="Quizzes"
                    Grid.Row="2"
                    Margin="6"
                    AreRowDetailsFrozen="True"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserReorderColumns="False"
                    CanUserResizeRows="False"
                    CanUserSortColumns="False"
                    RowHeight="32"
                    ScrollViewer.CanContentScroll="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    SelectionChanged="Quizzes_SelectionChanged"
                    SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="100"
                            MinWidth="100"
                            Binding="{Binding Subjects}"
                            Header="授業科目"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Width="280"
                            MinWidth="280"
                            Binding="{Binding Title}"
                            Header="タイトル"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Width="100"
                            MinWidth="100"
                            Binding="{Binding Status}"
                            Header="状態"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Width="120"
                            MinWidth="120"
                            Binding="{Binding SubmissionStatus}"
                            Header="提出状況"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Width="120"
                            MinWidth="120"
                            Binding="{Binding StartDateTime}"
                            Header="提出期間"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Width="120"
                            MinWidth="120"
                            Binding="{Binding EndDateTime}"
                            Header="提出期間"
                            IsReadOnly="True" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>
        <TabItem Header="授業共有ファイル">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <Button Margin="6" Content="更新" />
                </StackPanel>
                <GridSplitter
                    Grid.Row="1"
                    Width="5"
                    VerticalAlignment="Stretch" />
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MinWidth="100" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" MinWidth="100" />
                    </Grid.ColumnDefinitions>
                    <DataGrid
                        Name="ClassSharedFiles"
                        Grid.Column="0"
                        Margin="6"
                        AreRowDetailsFrozen="True"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        CanUserReorderColumns="False"
                        CanUserResizeRows="False"
                        CanUserSortColumns="False"
                        RowHeight="32"
                        ScrollViewer.CanContentScroll="True"
                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        SelectionChanged="ClassSharedFiles_SelectionChanged"
                        SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="100"
                                MinWidth="100"
                                Binding="{Binding Subjects}"
                                Header="授業科目"
                                IsReadOnly="True" />
                            <DataGridTextColumn
                                Width="280"
                                MinWidth="280"
                                Binding="{Binding Title}"
                                Header="タイトル"
                                IsReadOnly="True" />
                            <DataGridTextColumn
                                Width="240"
                                MinWidth="120"
                                MaxWidth="240"
                                Binding="{Binding Description}"
                                Header="ファイル説明"
                                IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn
                                Width="120"
                                MinWidth="120"
                                Binding="{Binding UpdateDateTime}"
                                Header="更新日時"
                                IsReadOnly="True" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <GridSplitter
                        Grid.Column="1"
                        Width="5"
                        HorizontalAlignment="Stretch" />
                    <StackPanel
                        Grid.Column="2"
                        Margin="6"
                        Orientation="Vertical">
                        <TextBox
                            Name="ClassSharedFileDescription"
                            MinHeight="160"
                            IsReadOnly="True"
                            Text="ファイル説明"
                            TextWrapping="Wrap" />
                        <StackPanel Orientation="Horizontal">
                            <ComboBox Name="ClassSharedFileFiles" Margin="6" />
                            <Button
                                Name="OpenClassSharedFile"
                                Margin="6"
                                Click="OpenClassSharedFile_Click"
                                Content="ファイルを開く" />
                            <Button
                                Name="OpenClassSharedFolder"
                                Margin="6"
                                Click="OpenClassSharedFolder_Click"
                                Content="フォルダを開く" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
